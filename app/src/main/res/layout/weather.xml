<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradiant"
    android:orientation="vertical"
    android:paddingTop="14dp"
    tools:context="com.example.ganesh.lifecalculator.Weather">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="WEATHER"
            android:textSize="38dp"
            android:textStyle="bold"
            android:id="@+id/headweather"
            android:textColor="@color/colorAccent"/>



        <EditText
            android:id="@+id/edtemp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/temptext"
            android:layout_below="@+id/headweather"
            android:layout_marginTop="80dp"
            android:inputType="text"
            android:hint="Specify city name"

            android:textSize="18dp" />

        <Button
            android:id="@+id/gobtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/edtemp"
            android:layout_alignBottom="@+id/edtemp"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/edtemp"
            android:background="@color/colorAccent"
            android:text="Go"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtemp"
            android:layout_marginTop="18dp"
            android:text="TEMP"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/temptext"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtemp"
            android:text=""
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/temptext"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAmber_A400"
            android:textSize="18dp"
            android:id="@+id/fintemp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temptext"
            android:layout_marginTop="18dp"
            android:text="PRESSURE"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/presstext"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/temptext"
            android:text=""
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/presstext"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAmber_A400"
            android:textSize="18dp"
            android:id="@+id/finpress"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/presstext"
            android:layout_marginTop="18dp"
            android:text="HUMIDITY"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/humtext"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/presstext"
            android:text=""
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/humtext"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAmber_A400"
            android:textSize="18dp"
            android:id="@+id/finhum"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/humtext"
            android:layout_marginTop="18dp"
            android:text="WIND SPEED"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/windtext"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/humtext"
            android:text=""
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/windtext"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAmber_A400"
            android:textSize="18dp"
            android:id="@+id/finwind"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/windtext"
            android:layout_marginTop="18dp"
            android:text="DESCRIPTION"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/destext"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/windtext"
            android:text=""
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/windtext"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorAmber_A400"
            android:textSize="18dp"
            android:id="@+id/findes"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/destext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="@color/colorAmber_A400"
            android:textSize="18dp"
            android:id="@+id/fincity"/>
    </RelativeLayout>


</LinearLayout>
