<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradiant"
    android:orientation="vertical"
    android:paddingTop="14dp"
    tools:context="com.ganesh.gecko.Temperature">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="TEMPERATURE"
            android:textColor="@color/colorAccent"
            android:textSize="38dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView11"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:text="From temperature "
            android:textColor="@color/colorAccent"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_temp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView12"
            android:layout_alignBottom="@+id/textView12"
            android:layout_toEndOf="@+id/textView12"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/tempspin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/textView13"
            android:layout_toEndOf="@+id/editText_temp"
            tools:layout_width="90dp">

        </Spinner>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView12"
            android:layout_marginStart="15dp"
            android:layout_marginTop="29dp"
            android:text="To      temperature "
            android:textColor="@color/colorAccent"
            android:textSize="22dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_temp2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView13"
            android:layout_alignBottom="@+id/textView13"
            android:layout_toEndOf="@+id/textView13"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/tempspin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/temp_cal"
            android:layout_toEndOf="@+id/editText_temp2"
            tools:layout_width="90dp">

        </Spinner>



        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/temp_cal"
            android:layout_below="@id/textView13"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/colorAccent"
            android:text="CALCULATE"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>




    </RelativeLayout>
</LinearLayout>
